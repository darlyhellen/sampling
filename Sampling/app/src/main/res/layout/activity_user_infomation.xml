<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.xiangxun.sampling.widget.header.TitleView
        android:id="@+id/id_userinfo_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_userinfo_title"
        android:layout_margin="@dimen/margin_padding4"
        android:background="@drawable/bg_round_corner_panel"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/id_userinfo_photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="@dimen/margin_padding10"
                android:src="@drawable/user_set_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击更换图像"
                android:textColor="@color/color333333"
                android:textSize="@dimen/textSize16" />

        </LinearLayout>

        <com.xiangxun.sampling.widget.groupview.DetailView
            android:id="@+id/id_userinfo_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_padding10" />

        <com.xiangxun.sampling.widget.groupview.DetailView
            android:id="@+id/id_userinfo_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_padding10" />

        <com.xiangxun.sampling.widget.groupview.DetailView
            android:id="@+id/id_userinfo_dept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_padding10" />

        <com.xiangxun.sampling.widget.groupview.DetailView
            android:id="@+id/id_userinfo_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_padding10" />

    </LinearLayout>


</RelativeLayout>