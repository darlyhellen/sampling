<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.xiangxun.sampling.widget.header.TitleView
        android:id="@+id/id_planning_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_set_user_info"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        android:padding="@dimen/margin_padding10">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_padding4"
            android:src="@mipmap/search"
            android:visibility="invisible" />

        <com.xiangxun.sampling.widget.clearedit.ClearEditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_padding4"
            android:src="@mipmap/search" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/id_planning_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="没有新任务"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize20"
            android:visibility="gone" />

        <com.xiangxun.sampling.widget.xlistView.XListView
            android:id="@+id/id_planning_wlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/index_line"
            android:dividerHeight="0.5dp"
            android:listSelector="@null"
            android:scrollbars="none" />
    </FrameLayout>
</LinearLayout>