<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <com.xiangxun.sampling.widget.header.TitleView
        android:id="@+id/tv_comm_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" />

    <com.xiangxun.sampling.widget.clearedit.ViewEditTextEx
        android:id="@+id/edt_server"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_comm_title" />

    <Button
        android:id="@+id/syscfgset"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/margin_padding10"
        android:background="@drawable/btn_green"
        android:text="@string/ok"
        android:textColor="@drawable/textcolor_selector"
        android:textSize="@dimen/textSize16" />
</RelativeLayout>