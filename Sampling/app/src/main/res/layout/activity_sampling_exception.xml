<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.xiangxun.sampling.widget.header.TitleView
        android:id="@+id/id_exception_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/sence_bg"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/margin_padding20">
            <!--定位信息-->
            <include layout="@layout/layout_locations" />

            <!--选择地块-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_padding20"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/margin_padding10">


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_padding4"
                        android:layout_marginRight="@dimen/margin_padding4"
                        android:src="@mipmap/ic_sence_title_gb" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="选择地块："
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize16" />
                </TableRow>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/app_shape_backgroud">

                    <ImageView
                        android:id="@+id/id_exception_map"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_margin="@dimen/margin_padding10"
                        android:src="@drawable/add_publish_image" />
                </LinearLayout>
            </LinearLayout>
            <!--异常类型-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_padding20"
                android:background="@color/white"
                android:padding="@dimen/margin_padding10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/id_exception_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_padding4"
                        android:layout_marginRight="@dimen/margin_padding4"
                        android:src="@mipmap/ic_sence_title_gb" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="异常类型："
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize16" />

                    <TextView
                        android:id="@+id/id_exception_select"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center" />


                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/icon_pull" />
            </RelativeLayout>
            <!--异常描述-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_padding20"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/margin_padding10">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_padding4"
                        android:layout_marginRight="@dimen/margin_padding4"
                        android:src="@mipmap/ic_sence_title_gb" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="异常描述："
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize16" />
                </LinearLayout>

                <EditText
                    android:id="@+id/id_exception__declare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/app_shape_backgroud"
                    android:gravity="top"
                    android:minLines="4"
                    android:padding="@dimen/margin_padding8"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/textSize16" />

            </LinearLayout>


            <!--照片信息-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_padding20"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin_padding10">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_padding4"
                        android:layout_marginRight="@dimen/margin_padding4"
                        android:src="@mipmap/ic_sence_title_gb" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="现场采样照片："
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize16" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@mipmap/ic_photo_title" />

                </TableRow>

                <com.xiangxun.sampling.widget.listview.WholeGridView
                    android:id="@+id/id_exception_gird"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:horizontalSpacing="@dimen/margin_padding4"
                    android:listSelector="@color/transparent"
                    android:numColumns="3" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>