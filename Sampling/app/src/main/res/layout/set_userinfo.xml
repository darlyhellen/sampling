<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_user_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/user_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="@dimen/margin_padding10"
            android:src="@mipmap/image_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:orientation="vertical"
            android:padding="10dip">

            <TextView
                android:id="@+id/account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/margin_padding5"
                android:text="用户名："
                android:textColor="@color/white"
                android:textSize="@dimen/textSize15" />

            <TextView
                android:id="@+id/realname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/margin_padding5"
                android:text="姓名："
                android:textColor="@color/white"
                android:textSize="@dimen/textSize15" />
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_head"
        android:layout_gravity="center_vertical"
        android:paddingBottom="@dimen/margin_padding5"
        android:paddingLeft="@dimen/margin_padding10"
        android:paddingTop="@dimen/margin_padding5"
        android:text="所属部门："
        android:textColor="@color/white"
        android:textSize="@dimen/textSize15" />


    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/region"
        android:layout_gravity="center_vertical"
        android:paddingBottom="@dimen/margin_padding5"
        android:paddingLeft="@dimen/margin_padding10"
        android:paddingTop="@dimen/margin_padding5"
        android:text="联系方式："
        android:textColor="@color/white"
        android:textSize="@dimen/textSize15"
        android:visibility="gone" />
</RelativeLayout>