<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_view_details"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/id_view_dt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize16" />

    <TextView
        android:id="@+id/id_view_dt_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_padding8"
        android:textColor="@color/color333333"
        android:textSize="@dimen/textSize16" />

    <com.xiangxun.sampling.widget.clearedit.ClearEditText
        android:id="@+id/id_view_dt_edit"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:background="@drawable/edit_normal"
        android:paddingLeft="@dimen/margin_padding8"
        android:textColor="@color/color333333"
        android:textSize="@dimen/textSize16" />

</LinearLayout>