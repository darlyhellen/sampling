<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sence_bg"
    android:orientation="vertical">


    <com.xiangxun.sampling.widget.header.TitleView
        android:id="@+id/id_search_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/margin_padding10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/app_login_shape"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="样品名称:"
                    android:textColor="@color/login_edit_text" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@color/sence_bg" />

                <EditText
                    android:id="@+id/id_search_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@color/transparent"
                    android:hint="请输入样品名称"
                    android:padding="10dp"
                    android:textColor="#757575"
                    android:textSize="@dimen/textSize15" />
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_padding1"
                android:background="@drawable/backgroud_top_line">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="指标名称："
                    android:textColor="@color/login_edit_text" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@color/sence_bg" />

                <EditText
                    android:id="@+id/id_search_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@color/transparent"
                    android:hint="请输入指标名称"
                    android:padding="10dp"
                    android:textColor="#757575"
                    android:textSize="@dimen/textSize15" />
            </TableRow>


            <TableRow
                android:id="@+id/id_search_switch_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_padding1"
                android:background="@drawable/backgroud_top_line"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="是否超标："
                    android:textColor="@color/login_edit_text" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@color/sence_bg" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">

                    <Switch
                        android:id="@+id/id_search_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textOff="否"
                        android:textOn="是"
                        android:thumb="@drawable/thumb"
                        android:track="@drawable/track" />
                </RelativeLayout>
            </TableRow>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
